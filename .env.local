# Backend Environment Variables
# This file should not be committed to version control

# Database connection
# For local development:
DATABASE_URL=postgresql://localhost/inventory_app_db
# For production (uncomment and update):
# DATABASE_URL=postgresql://username:password@postgres.render.com:5432/inventory_db

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here

# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS=path/to/your-google-credentials.json

# Server configuration
PORT=5001
HOST=0.0.0.0
DEBUG=False

# Set to 'production' for production environments
FLASK_ENV=development
